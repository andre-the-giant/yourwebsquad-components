---
import "../styles/reset.css";
import "@lib/styles/tokens.css";
import Sidebar from "../components/Sidebar.astro";
import ThemeToggle from "../components/ThemeToggle.astro";
import ywsLogo from "../images/yws_logo.svg?raw";

const { title = "Your Web Squad", description = "Component library", items = [] } = Astro.props;
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Bangers&family=Roboto:wght@300;400;500;700&display=swap"
      rel="stylesheet"
    />
  </head>
  <body>
    <div class="docs-shell">
      <aside class="docs-sidebar">
        <div class="brand">
          <div class="brand__logo" aria-label="Your Web Squad logo" role="img" set:html={ywsLogo} />
        </div>
        <Sidebar items={items} />
      </aside>
      <main class="docs-main">
        <header class="docs-header">
          <div>
            <p class="docs-kicker">Library</p>
            <h1 class="docs-title">{title}</h1>
            <p class="docs-subtitle">{description}</p>
          </div>
          <ThemeToggle />
        </header>
        <section class="docs-content">
          <slot />
        </section>
      </main>
    </div>
  </body>
</html>

<style is:global>
  body {
    font-family: var(--font-body);
    background: var(--color-bg);
    color: var(--color-fg);
    min-height: 100vh;
    position: relative;
    isolation: isolate;
  }

  /* Docs-specific look adjustments: remove rounded corners and heavy shadows */
  .docs-shell,
  .docs-sidebar,
  .docs-main,
  .card,
  .preview,
  .sidebar__link {
    --radius-sm: 0;
    --radius-md: 0;
    --radius-lg: 0;
    --color-shadow: transparent;
  }

  body::before {
    content: "";
    position: fixed;
    inset: 0;
    background-image:
      radial-gradient(
        circle at 14% 18%,
        color-mix(in srgb, var(--color-accent) 14%, transparent),
        transparent 48%
      ),
      radial-gradient(
        circle at 82% 12%,
        color-mix(in srgb, var(--color-border) 35%, transparent),
        transparent 42%
      );
    pointer-events: none;
    z-index: -1;
  }

  h1,
  h2,
  h3,
  h4 {
    font-family: var(--font-display);
    letter-spacing: 0.02em;
    line-height: var(--line-tight);
  }

  p {
    margin: 0;
  }

  .docs-shell {
    display: grid;
    grid-template-columns: minmax(220px, 280px) minmax(0, 1fr);
    gap: var(--space-4);
    padding: var(--space-4);
    min-height: 100vh;
  }

  .docs-sidebar {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0;
    padding: var(--space-4);
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    position: sticky;
    top: var(--space-4);
    height: calc(100vh - var(--space-4) * 2);
    overflow: auto;
    box-shadow: none;
  }

  .brand {
    display: flex;
    flex-direction: column;
    gap: var(--space-1);
  }

  .brand__logo {
    width: min(190px, 100%);
  }

  .brand__logo svg {
    display: block;
    width: 100%;
    height: auto;
  }

  .brand__title {
    font-family: var(--font-display);
    font-size: 1.75rem;
  }

  .brand__tag {
    text-transform: uppercase;
    font-size: var(--size-xs);
    letter-spacing: 0.22em;
    color: var(--color-muted);
  }

  .docs-main {
    background: var(--color-surface);
    border: 1px solid var(--color-border);
    border-radius: 0;
    padding: clamp(1.5rem, 2vw, 2.5rem);
    box-shadow: none;
    display: flex;
    flex-direction: column;
    gap: var(--space-5);
  }

  .docs-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--space-4);
    flex-wrap: wrap;
    border-bottom: 1px solid var(--color-border);
    padding-bottom: var(--space-4);
  }

  .docs-kicker {
    text-transform: uppercase;
    font-size: var(--size-xs);
    letter-spacing: 0.32em;
    color: var(--color-muted);
  }

  .docs-title {
    font-size: clamp(2rem, 2.4vw, 2.75rem);
    margin: var(--space-2) 0;
  }

  .docs-subtitle {
    color: var(--color-muted);
    font-size: var(--size-lg);
    max-width: 42ch;
  }

  .docs-content {
    display: grid;
    gap: var(--space-4);
  }

  @media (max-width: 960px) {
    .docs-shell {
      grid-template-columns: 1fr;
    }

    .docs-sidebar {
      position: static;
      height: auto;
    }
  }
</style>
