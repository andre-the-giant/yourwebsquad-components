---
import DocLayout from "@docs/layouts/DocLayout.astro";
import Preview from "@docs/components/Preview.astro";
import { components } from "@docs/data/components.js";
import FormTextarea from "@lib/components/Form-Textarea/Form-Textarea.astro";

const basicCode = `<FormTextarea content={{ label: "Message", id: "message", placeholder: "Write your message" }} />`;
const statesCode = `<FormTextarea content={{ label: "Notes", id: "notes" }} rows={6} />\n<FormTextarea content={{ label: "Disabled", id: "notes-disabled" }} disabled />`;
---

<DocLayout title="Form-Textarea" description="Multiline text input with label." items={components}>
  <Preview title="Basic" code={basicCode}>
    <div class="row">
      <FormTextarea
        content={{ label: "Message", id: "message", placeholder: "Write your message" }}
      />
    </div>
  </Preview>

  <Preview title="States" code={statesCode}>
    <div class="row">
      <FormTextarea content={{ label: "Notes", id: "notes" }} rows={6} />
      <FormTextarea content={{ label: "Disabled", id: "notes-disabled" }} disabled />
    </div>
  </Preview>
</DocLayout>

<style>
  .row {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    width: 100%;
  }
</style>
