---
import DocLayout from "@docs/layouts/DocLayout.astro";
import Preview from "@docs/components/Preview.astro";
import PropsTable from "@docs/components/PropsTable.astro";
import { components } from "@docs/data/components.js";
import FormInput from "@lib/components/Form-Input/Form-Input.astro";
import FormHelp from "@lib/components/Form-Help/Form-Help.astro";

const basicCode = `<FormInput
  label="Username"
  id="username"
  name="username"
  helpId="username-help"
/>
<FormHelp id="username-help">Use 3–16 characters, letters and numbers only.</FormHelp>`;

const props = [
  { name: "id", type: "string", description: "Element id to wire into aria-describedby." },
  { name: "text", type: "string", description: "Help text content." },
  { name: "class", type: "string", description: "Additional className." }
];
---

<DocLayout
  title="Form-Help"
  description="Helper text for form fields with aria support."
  items={components}
>
  <PropsTable props={props} />

  <Preview title="Usage" code={basicCode}>
    <div class="row">
      <FormInput label="Username" id="username" name="username" helpId="username-help" />
      <FormHelp id="username-help">Use 3–16 characters, letters and numbers only.</FormHelp>
    </div>
  </Preview>
</DocLayout>

<style>
  .row {
    display: flex;
    flex-direction: column;
    gap: var(--space-2);
    width: 100%;
  }
</style>
