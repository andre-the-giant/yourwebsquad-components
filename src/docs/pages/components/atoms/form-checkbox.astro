---
import DocLayout from "@docs/layouts/DocLayout.astro";
import Preview from "@docs/components/Preview.astro";
import PropsTable from "@docs/components/PropsTable.astro";
import { components } from "@docs/data/components.js";
import FormCheckbox from "@lib/components/Form-Checkbox/Form-Checkbox.astro";

const basicCode = `
<FormCheckbox label="Enable notifications" id="notify" />`;
const optionsCode = `
<FormCheckbox label="Right toggle" />\n<FormCheckbox label="Left toggle" position="left" checkedColor="#0d6ea8" uncheckedColor="#e6e6e6" thumbColor="#fff" radius="20px" />
<FormCheckbox 
        label="Squary left toggle starting red going red"
        radius="3px"
        position="left" 
        uncheckedColor="green"
        checkedColor="red"
         />`;
---

<DocLayout
  title="Form-Checkbox (Toggle)"
  description="Styled checkbox presented as a toggle. Position and colors configurable."
  items={components}
>
  <PropsTable
    props={[
      { name: "id", type: "string", description: "Checkbox id; auto-generated if missing." },
      { name: "name", type: "string", description: "Form field name." },
      { name: "label", type: "string", description: "Label text." },
      { name: "checked", type: "boolean", default: "false", description: "Checked state." },
      { name: "disabled", type: "boolean", default: "false", description: "Disable checkbox." },
      {
        name: "required",
        type: "boolean",
        default: "false",
        description: "Mark required; adds asterisk."
      },
      {
        name: "position",
        type: `"left" | "right"`,
        default: '"right"',
        description: "Toggle placement relative to label."
      },
      { name: "checkedColor", type: "string", description: "Track color when checked." },
      { name: "uncheckedColor", type: "string", description: "Track color when unchecked." },
      { name: "thumbColor", type: "string", description: "Thumb color." },
      { name: "radius", type: "string", description: "Track/thumb border-radius." },
      { name: "ariaLabel", type: "string", description: "aria-label fallback when no label." },
      {
        name: "ariaDescribedBy",
        type: "string",
        description: "IDs to include in aria-describedby."
      },
      {
        name: "helpId",
        type: "string",
        description: "Help text id to append to aria-describedby."
      },
      {
        name: "errorId",
        type: "string",
        description: "Error text id to append to aria-describedby."
      },
      {
        name: "ariaInvalid",
        type: "boolean",
        default: "false",
        description: 'Sets aria-invalid="true".'
      },
      { name: "ariaControls", type: "string", description: "Optional aria-controls id." }
    ]}
  />

  <Preview title="Basic" code={basicCode}>
    <div class="row">
      <FormCheckbox label="Enable notifications" id="notify" />
    </div>
  </Preview>

  <Preview title="Variants" code={optionsCode}>
    <div class="row">
      <FormCheckbox label="Right toggle" />
      <FormCheckbox
        label="Left toggle"
        position="left"
        checkedColor="#0d6ea8"
        uncheckedColor="#e6e6e6"
        thumbColor="#fff"
        radius="20px"
      />
      <FormCheckbox
        label="Squary left toggle starting red going red"
        radius="3px"
        position="left"
        uncheckedColor="green"
        checkedColor="red"
      />
    </div>
  </Preview>
</DocLayout>

<style>
  .row {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    max-width: 50rem;
  }
</style>
