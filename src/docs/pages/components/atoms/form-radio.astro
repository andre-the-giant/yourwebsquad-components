---
import DocLayout from "@docs/layouts/DocLayout.astro";
import Preview from "@docs/components/Preview.astro";
import PropsTable from "@docs/components/PropsTable.astro";
import { components } from "@docs/data/components.js";
import FormRadio from "@lib/components/Form-Radio/Form-Radio.astro";

const basicCode = `<FormRadio label="Option A" id="opt-a" value="a" name="example" />\n<FormRadio label="Option B" id="opt-b" value="b" name="example" />`;
const variantsCode = `<FormRadio label="Left radio" position="left" style="--radio-color: #0d6ea8;" />\n<FormRadio label="Right radio" position="right" style="--radio-color: #c92a2a;" />`;
const cssVarCode = `<FormRadio label="Custom color" style="--radio-color: rebeccapurple; --radio-size: 24px; --radio-radius: 8px;" />`;
const styleVars = [
  { name: "--radio-color", description: "Active color.", default: "currentColor" },
  { name: "--radio-size", description: "Outer size.", default: "20px" },
  { name: "--radio-radius", description: "Outer radius.", default: "50%" }
];
---

<DocLayout
  title="Form-Radio"
  description="Stylish radio buttons with layout and color options."
  items={components}
>
  <PropsTable
    props={[
      { name: "id", type: "string", description: "Radio id; auto-generated if missing." },
      { name: "class", type: "string", description: "Wrapper class names." },
      { name: "style", type: "string", description: "Inline styles or CSS var overrides." },
      { name: "name", type: "string", description: "Form field name (groups radios)." },
      { name: "label", type: "string", description: "Label text." },
      { name: "value", type: "string", description: "Submitted value for this radio." },
      { name: "checked", type: "boolean", default: "false", description: "Checked state." },
      { name: "disabled", type: "boolean", default: "false", description: "Disable radio." },
      {
        name: "required",
        type: "boolean",
        default: "false",
        description: "Mark required; adds asterisk."
      },
      {
        name: "layout",
        type: `"row" | "column"`,
        default: '"row"',
        description: "Wrapper layout (stack radios)."
      },
      {
        name: "position",
        type: `"left" | "right"`,
        default: '"left"',
        description: "Radio placement relative to label."
      },
      {
        deprecated: true,
        name: "color",
        type: "string",
        description: "Deprecated — use style vars (see below)."
      },
      {
        deprecated: true,
        name: "size",
        type: "string",
        default: '"20px"',
        description: "Deprecated — use style vars (--radio-size)."
      },
      {
        deprecated: true,
        name: "radius",
        type: "string",
        default: '"50%"',
        description: "Deprecated — use style vars (--radio-radius)."
      },
      { name: "ariaLabel", type: "string", description: "aria-label fallback when no label." },
      {
        name: "ariaDescribedBy",
        type: "string",
        description: "IDs to include in aria-describedby."
      },
      {
        name: "helpId",
        type: "string",
        description: "Help text id to append to aria-describedby."
      },
      {
        name: "errorId",
        type: "string",
        description: "Error text id to append to aria-describedby."
      },
      {
        name: "ariaInvalid",
        type: "boolean",
        default: "false",
        description: 'Sets aria-invalid="true".'
      },
      { name: "ariaControls", type: "string", description: "Optional aria-controls id." }
    ]}
  />

  <PropsTable title="Style variables" props={styleVars} />

  <Preview title="Basic" code={basicCode}>
    <div class="row">
      <FormRadio label="Option A" id="opt-a" value="a" name="example" />
      <FormRadio label="Option B" id="opt-b" value="b" name="example" />
    </div>
  </Preview>

  <Preview title="Variants" code={variantsCode}>
    <div class="row">
      <FormRadio label="Left radio" position="left" style="--radio-color: #0d6ea8;" />
      <FormRadio label="Right radio" position="right" style="--radio-color: #c92a2a;" />
    </div>
  </Preview>

  <Preview title="CSS variables" code={cssVarCode}>
    <div class="row">
      <FormRadio
        label="Custom color"
        style="--radio-color: rebeccapurple; --radio-size: 24px; --radio-radius: 8px;"
      />
    </div>
  </Preview>
</DocLayout>

<style>
  .row {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
    max-width: 36rem;
  }
</style>
