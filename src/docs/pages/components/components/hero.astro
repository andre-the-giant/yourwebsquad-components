---
import DocLayout from "../../../layouts/DocLayout.astro";
import Preview from "../../../components/Preview.astro";
import PropsTable from "../../../components/PropsTable.astro";
import { components } from "../../../data/components.js";
import Hero from "@lib/components/Hero/Hero.astro";

const code = "<Hero />";
const props = [
  {
    name: "title",
    type: "string",
    description: "Heading text."
  },
  {
    name: "body",
    type: "string",
    description: "Body copy (HTML allowed)."
  },
  {
    name: "cta",
    type: "{ href?: string, label?: string }",
    default: "—",
    description: "CTA data; both href and label required to render."
  },
  {
    name: "img",
    type: "string",
    default: "—",
    description: "Background image source."
  },
  {
    name: "clip",
    type: "string",
    default: "—",
    description:
      "Relative (important!) SVG path for clipPath. Run it through path converter https://yoksel.github.io/relative-clip-path/"
  }
];
---

<DocLayout title="Hero" description={"A big fat image with a text and a cta "} items={components}>
  <PropsTable props={props} />

  <Preview title="Preview" code={code}>
    <Hero
      title="Your Web Squad is here for you"
      body="We built this component library to help us build websites faster."
      img="https://picsum.photos/1280/720"
      clip="m1,0 v1 c0,0,-0.098,-0.192,-0.224,-0.188 c-0.126,0.004,-0.438,0.188,-0.506,0.188 c-0.068,0,-0.005,-0.149,-0.109,-0.117 c-0.104,0.032,-0.16,0.068,-0.16,0.068 v-0.952"
      cta={{
        href: "/",
        label: "Pump up the volume!"
      }}
    />
  </Preview>
</DocLayout>
