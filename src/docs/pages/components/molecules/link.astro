---
import DocLayout from "@docs/layouts/DocLayout.astro";
import Preview from "@docs/components/Preview.astro";
import PropsTable from "@docs/components/PropsTable.astro";
import { components } from "@docs/data/components.js";
import LinkComponent from "@lib/components/Link/Link.astro";

const code = `

    <Link href="https://css-tricks.com/" label="Visit CSS Tricks" size="sm" />

    <Link href="https://css-tricks.com/" label="Visit CSS Tricks" size="md" />

    <Link href="https://css-tricks.com/" label="Visit CSS Tricks" size="lg" />
    `;

const props = [
  { name: "label", type: "string", default: '"Read more"', description: "Link text." },
  { name: "href", type: "string", description: "Destination URL." },
  { name: "target", type: "string", description: "Target attribute (e.g., _blank)." },
  {
    name: "rel",
    type: "string",
    default: "auto '_blank'→'noreferrer'",
    description: "Rel attribute."
  },
  {
    name: "variant",
    type: `"solid" | "outline" | "ghost"`,
    default: '"ghost"',
    description: "Visual style (delegated to Button)."
  },
  {
    name: "size",
    type: `"sm" | "md" | "lg"`,
    default: '"md"',
    description: "Size token (delegated to Button)."
  },
  {
    name: "disabled",
    type: "boolean",
    default: "false",
    description: "Disables link styling/aria."
  }
];
---

<DocLayout
  title="Link"
  description={"handles internal/external, active state, “opens in new tab” indicators"}
  items={components}
>
  <PropsTable props={props} />

  <Preview title="Preview" code={code}>
    <LinkComponent href="https://css-tricks.com/" label="Visit CSS Tricks" size="sm" />

    <LinkComponent href="https://css-tricks.com/" label="Visit CSS Tricks" size="md" />

    <LinkComponent href="https://css-tricks.com/" label="Visit CSS Tricks" size="lg" />
  </Preview>
</DocLayout>
