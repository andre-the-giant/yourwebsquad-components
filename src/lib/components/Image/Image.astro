---
/*
Props:
- content?: { shape }
Notes:
- direct props override content.*
*/
import { Image } from "astro:assets";
const {
  content = {},
  format = "webp",
  quality = 60,
  widths = [640, 960, 1280, 1600, 1920],
  alt = "",
  backgroundPosition = "center",
  aspectRatio = "16/9",
  fetchpriority = "high",
  loading = "lazy", // eager
  sizes = "100vw",
  src = "https://picsum.photos/320/180"
} = Astro.props;

const imageDefaults = {
  format: format,
  sizes: sizes,
  quality: quality,
  widths: widths,
  fetchpriority: fetchpriority,
  loading: loading,
  width: 160,
  height: 90
};
---

<Image
  {...imageDefaults}
  src={src}
  alt={alt}
  style={`width: 100%; height: 100%; object-fit: cover;object-position:${backgroundPosition};aspect-ratio:${aspectRatio}`}
/>
