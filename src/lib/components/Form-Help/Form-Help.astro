---
/*
Props:
- id?: string
- text?: string
- class?: string
- style?: string
Notes:
- Intended to pair with `helpId` passed to form fields for aria-describedby.
*/
import { validateProps } from "../../utils/props.js";
import { makeStyleVars, mergeClasses } from "../../utils/style.js";

const schema = {
  id: { type: "string" },
  class: { type: "string" },
  style: { type: "string" },
  text: { type: "string" }
};

const {
  id,
  text,
  class: className,
  style,
  ...rest
} = validateProps(schema, Astro.props, {
  component: "Form-Help"
});

const resolvedId = id ?? `form-help-${Math.random().toString(36).slice(2, 9)}`;
const resolvedText = text;
const resolvedStyle = makeStyleVars({}, style);
const resolvedClass = mergeClasses("form-help", className);
---

<p id={resolvedId} class={resolvedClass} style={resolvedStyle || undefined} {...rest}>
  <slot>{resolvedText}</slot>
  {Astro.slots.has("suffix") ? <slot name="suffix" /> : null}
</p>

<style>
  .form-help {
    color: var(--form-help-color);
    font-size: var(--size-sm);
    margin: 0;
    line-height: var(--line-normal);
  }
</style>
