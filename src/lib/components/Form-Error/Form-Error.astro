---
/*
Props:
- id?: string
- text?: string
- class?: string
- role?: string
- ariaLive?: "polite" | "assertive" | "off"
Notes:
- Intended to pair with `errorId` passed to form fields for aria-describedby.
*/
const { id, text, class: className, role = "alert", ariaLive = "polite", ...rest } = Astro.props;

const resolvedId = id ?? `form-error-${Math.random().toString(36).slice(2, 9)}`;
const resolvedText = text;
---

<p
  id={resolvedId}
  class={`form-error ${className ?? ""}`}
  role={role}
  aria-live={ariaLive}
  {...rest}
>
  <slot>{resolvedText}</slot>
  {Astro.slots.has("suffix") ? <slot name="suffix" /> : null}
</p>

<style>
  .form-error {
    color: var(--form-error-color);
    font-size: var(--size-sm);
    margin: 0;
    line-height: var(--line-normal);
  }
</style>
