---
/*
Props:
- content?: { id?: string, text?: string }
- id?: string
- text?: string
- class?: string
- role?: string
- ariaLive?: "polite" | "assertive" | "off"
Notes:
- Direct props override content.*
- Intended to pair with `errorId` passed to form fields for aria-describedby.
*/
const {
  content = {},
  id,
  text,
  class: className,
  role = "alert",
  ariaLive = "polite",
  ...rest
} = Astro.props;

const resolvedId = id ?? content.id ?? `form-error-${Math.random().toString(36).slice(2, 9)}`;
const resolvedText = text ?? content.text;
---

<p
  id={resolvedId}
  class={`form-error ${className ?? ""}`}
  role={role}
  aria-live={ariaLive}
  {...rest}
>
  <slot>{resolvedText}</slot>
  {Astro.slots.has("suffix") ? <slot name="suffix" /> : null}
</p>

<style>
  .form-error {
    color: var(--form-error-color);
    font-size: var(--size-sm);
    margin: 0;
    line-height: var(--line-normal);
  }
</style>
